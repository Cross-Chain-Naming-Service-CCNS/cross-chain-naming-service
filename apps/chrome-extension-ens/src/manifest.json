{
  "manifest_version": 3,
  "name": "ENS Walrus Resolver",
  "version": "1.0.2",
  "description": "Resolves ENS domains with Walrus content hashes",
  "permissions": ["activeTab", "storage", "tabs", "webNavigation"],
  "host_permissions": [
    "https://mainnet.infura.io/*",
    "https://sepolia.infura.io/*",
    "https://*.stablerecruit.com/*",
    "*://*.eth/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.eth/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
